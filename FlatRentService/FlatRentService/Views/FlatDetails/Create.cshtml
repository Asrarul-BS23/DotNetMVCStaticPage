@model FlatRentService.Models.FlatDetails

@{
	ViewData["Title"] = "Create";
}

<h3>Create a Flat for Rent</h3>

<form asp-action="Create" method="post">
	<div class="form-group">
		<label for="Location">Location</label>
		<input type="text" class="form-control" asp-for="Location" />
	</div>
	<div class="form-group">
		<label for="BuildingName">BuildingName</label>
		<input type="text" class="form-control" asp-for="BuildingName" />
	</div>
	<div class="form-group">
		<label for="BuildingNumber">BuildingNumber</label>
		<input type="number" class="form-control" asp-for="BuildingNumber" />
	</div>
	<div class="form-group">
		<label for="Floor">Floor</label>
		<input type="number" class="form-control" asp-for="Floor" />
	</div>
	<div class="form-group">
		<label for="NumberOfBedRoom">NumberOfBedRoom</label>
		<input type="number" class="form-control" asp-for="NumberOfBedRoom" />
	</div>
	<div class="form-group">
		<label for="NumberOfBathRoom">NumberOfBathRoom</label>
		<input type="number" class="form-control" asp-for="NumberOfBathRoom" />
	</div>
	<div class="form-group">
		<label for="FlatSize">FlatSize</label>
		<input type="number" class="form-control" asp-for="FlatSize" />
	</div>
	<div class="form-check">
		<input type="checkbox" class="form-check-input" asp-for="IsLiftAvailable" />
		<label class="form-check-label" asp-for="IsLiftAvailable">IsLiftAvailable</label>
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>
